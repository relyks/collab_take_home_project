%html
  %head
    = haml(:header)
  %body
    %header
      = haml(:navigation)
    %main
      %h2= @video.title
      %hr
      %section
        %iframe{'id' => "ytplayer", 'type' => "text/html", 'width' => "640", 'height' => "360", 'src' => "https://www.youtube.com/embed/#{@video.video_id}?autoplay=0", 'frameborder' =>"0", allowfullscreen: true}
      %hr
      %article 
        %p= @video.description